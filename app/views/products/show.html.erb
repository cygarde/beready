<div class="beready-ctn ">
  <div id="container-app-show">

   <div class="d-flex p-1">
      <% if @product.photo.key %>
      <%= cl_image_tag @product.photo.key, width: 230, height: 230, crop: :fill %>
      <%end%>


      <div class="row">
        <div class="col-12 ml-3 mt-3">

            <div class="d-flex">
              <h2><%= @product.name %></h2>
                <span class="hint-star star">
                  <% counter = 0 %>
                  <% 3.times do %>
                  <i class="fa <%= @product.state > counter ? 'fa-star' : 'fa-star-o' %>"></i>
                  <% counter += 1 %>
                  <% end %>
                </span>
              </div>

              <p>Description: <%= @product.description %></p>

              <p>Cat√©gorie: <%= @product.category %></p>

              <div class="control">
                <button class="btn">
                <span class="price"><%= @product.unit_price %>$</span>
                <span class="shopping-cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                </button>
              </div>


        </div>
      </div>
    </div>
  </div>



    <div class="d-flex mt-2">
      <%= link_to "Back", products_path, class:"text-dark" %>
      <div class="ml-3">
        <%= link_to "Delete", product_path, method: :delete, class:"text-dark" %>
      </div>
    </div>

    <div class="flex" mt-4>
      <i class="fab fa-facebook-square"></i>
      <i class="fab fa-twitter"></i>
      <i class="fab fa-instagram"></i>
    </div>

</div>

</div>
