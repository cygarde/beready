
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<%= image_path 'tente_banner.jpg' %>');">
  <div class="banner-content">
    <h1>BE READY !</h1>
    <h3>Trouve ce dont tu as besoin ...</h3>
    <p>
      <span id="banner-typed-text"></span>
    </p>

     <%= form_tag products_path, method: :get do %>
      <%= text_field_tag :query,
                          params[:query],
                          class: "form-control",
             placeholder: "Trouver un produits"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>

</div>
<div class="container">
  <div class="last-cards">
    <h2>Les objets les plus loués</h2>

      <div class="products-presentation">
        <% @products.each do |product| %>
          <div id="container-app">
          <div class="product-details">
          <div class="d-flex">
            <% if product.photo.attached? %>
              <p><%= product.name %></p>
              <span class="hint-star star">
                <% counter = 0 %>
                <% 3.times do %>
                <i class="fa <%= product.state > counter ? 'fa-star' : 'fa-star-o' %>"></i>
                <% counter += 1 %>
                <% end %>
              </span>
            </div>
              <div class="control">
                <button class="btn">
                <span class="price"><%= product.unit_price %>$ / jour</span>
                <span class="shopping-cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                  <!--<%= link_to "Détail", product_path(product) %>-->
                <span class="buy"><%= link_to "Détails", product_path(product), class:"text-dark" %></span>
                </button>
              </div>
            </div>
            <div class="product-image">
              <%= cl_image_tag product.photo.key %>
            </div>
              <% else %>
              <%= product.name %>
              <%= product.description %>
              <%= product.state %>
              <%= product.unit_price %>
              <%= product.category %>
              <%= product.city %>
              <%= link_to "Détail", product_path(product) %>
              <% end %>
            </div>
            <% end %>
        </div>


