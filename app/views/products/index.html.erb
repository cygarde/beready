<div class="beready-ctn">
  <h1>Trouve ton bonheur ! </h1>
  <ul>
  </ul>
  <div class="img-card">
    <p>EMPLACEMENT MAP</p>
  </div>
  <div class="container mt-5 mb-5">
    <div class="card col-3">
      <div class="grid-page">
        <% @products.each do |product| %>
        <% if product.photo.attached? %>
        <div class="img-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path product.photo.key, height: 300, width: 400, crop: :fill %>)">
          <%= product.name %>
          <%= product.description %>
          <%= product.state %>
          <%= product.unit_price %>
          <%= product.category %>
          <%= product.city %>
          <%= link_to "Détail", product_path(product) %>
        </div>
        <% else %>
        <div>  <%= product.name %>
          <%= product.description %>
          <%= product.state %>
          <%= product.unit_price %>
          <%= product.category %>
          <%= product.city %>
          <%= link_to "Détail", product_path(product) %>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
